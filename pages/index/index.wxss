page {
  background-color: #f9f9f9;
}
.search-header {
  width: 100%;
  height: 84rpx;
  background-color: #3323B2;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
}
.search-header navigator {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  border-radius: 100px;
  height: 48rpx;
  width: 90%;
}
.search-header text {
  font-size: 28rpx;
  color: #444444;
  opacity: 0.5;
  margin-left: 12rpx;
}
.banner-wrap {
  position: relative;
}
.banner-wrap swiper {
  width: 100%;
  height: 440rpx;
}
.banner-wrap swiper swiper-item {
  width: 100%;
}
.banner-wrap swiper swiper-item image {
  width: 100%;
  height: 100%;
}
.banner-wrap .dots {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 16rpx;
  height: 16rpx;
  width: 100%;
}
.banner-wrap .dots .dot {
  background-color: white;
  width: 16rpx;
  height: 16rpx;
  border-radius: 16rpx;
  margin-left: 16rpx;
}
.banner-wrap .dots .dot.active {
  width: 32rpx;
  background-color: #3323B2;
}
.category {
  margin: 40rpx;
  height: 390rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-content: space-between;
  flex-wrap: wrap;
}
.category navigator {
  width: 320rpx;
  height: 180rpx;
  position: relative;
}
.category navigator image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.category navigator view {
  position: absolute;
  color: white;
  bottom: 14rpx;
  left: 12rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
}
.category navigator .zh {
  font-size: 36rpx;
}
.category navigator .en {
  font-size: 28rpx;
}
.subject {
  padding: 20rpx 0rpx 20rpx 40rpx;
  background-color: white;
  margin-bottom: 40rpx;
}
.subject header {
  padding-right: 38rpx;
  font-size: 28rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}
.subject header text {
  color: #444444;
  opacity: 0.82;
}
.subject header navigator {
  color: #3323B2;
}
.subject ul {
  width: auto;
  display: inline-block;
  white-space: nowrap;
  padding-top: 24rpx;
}
.subject ul:after {
  content: '';
  display: block;
  clear: both;
}
.subject ul li {
  display: inline-block;
  height: 440rpx;
  width: 320rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.subject ul li navigator {
  height: 440rpx;
  width: 320rpx;
  position: relative;
}
.subject ul li image {
  width: 100%;
  height: 100%;
}
.subject ul li .tel {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  height: 28rpx;
  background-color: #FF593B;
  border-radius: 28rpx;
  color: white;
  padding: 0rpx 18rpx 0rpx 8rpx;
  font-size: 20rpx;
}
.subject ul li .tel::before {
  font-size: 20rpx;
  content: '\e603';
  margin-right: 8rpx;
}
.subject ul li .desc {
  box-sizing: border-box;
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 84rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 0rpx 24rpx 10rpx 20rpx;
}
.subject ul li .desc .name {
  font-size: 28rpx;
}
.subject ul li .desc view {
  font-size: 18rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}
.subject ul li .desc .icon::before {
  content: '\e604';
  margin-right: 20rpx;
  font-size: 20rpx;
}
.ident-wrap {
  position: fixed;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99;
  display: none;
}
.ident-wrap .ident {
  background-color: white;
  border-radius: 10rpx;
  padding: 80rpx 60rpx 40rpx;
  width: 600rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-top: 244rpx;
  position: relative;
}
.ident-wrap .ident icon {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 48rpx;
  height: 48rpx;
  color: gray;
}
.ident-wrap .ident text {
  display: block;
}
.ident-wrap .ident .title {
  color: #444444;
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
.ident-wrap .ident .desc {
  color: #444444;
  opacity: 0.82;
  font-size: 28rpx;
  margin-bottom: 80rpx;
}
.ident-wrap .ident navigator {
  margin: 0 auto;
  background-color: #3323B2;
  color: white;
  font-size: 28rpx;
  width: 248rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 200rpx;
}
